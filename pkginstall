#!/data/data/com.termux/files/usr/bin/bash

echo "Updating repository lists.."
apt update && apt upgrade -y

echo "Installing all necessary packages...."

apt install zsh git curl vim cowsay gdb man wget radare2 tree psmisc python python2 openssh irssi clang coreutils binutils dnsutils nmap nano figlet htop tmux file net-tools gawk openssl-tool pwgen procps screenfetch -y
echo "Now installing oh-my-zsh"

sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

echo "if test -t 1; then
exec zsh
fi" >> ~/.bashrc

source ~/.bashrc

echo "Installing ipython and youtube-dl using pip"
pip install ipython youtube-dl

echo "Done installing packages!"

