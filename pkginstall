#!/data/data/com.termux/files/usr/bin/bash

echo "Updating repository lists.."
apt update && apt upgrade -y

echo "Installing all necessary packages...."

apt install zsh git curl vim cowsay gdb man wget radare2 tree psmisc python python2 openssh irssi php clang apache2 coreutils binutils dnsutils nmap nano toilet figlet htop tmux screen file net-tools -y
echo "Now installing oh-my-zsh"

sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

echo "if test -t 1; then
exec zsh
fi" >> ~/.bashrc

source ~/.bashrc

echo "Installing ipython.."
pip install ipython

echo "Done installing packages!"

